Question1 : minimum index:


#include <iostream>
#include <string>
#include <unordered_set>

using namespace std;

int firstSpecialIndex(const string& s) {
    unordered_set<char> vowels = {'a', 'e', 'i', 'o', 'u'};
    int n = (int)s.size();

    int maxVowelLen = 0, maxConsLen = 0;

    for (int i = 0; i < n; ++i) {
        char ch = s[i];

        if (ch == '?') {
            maxVowelLen = maxVowelLen + 1;
            maxConsLen = maxConsLen + 1;
        } 
        else if (vowels.count(ch)) {
            maxVowelLen = maxVowelLen + 1;
            maxConsLen = 0;
        } 
        else {
            maxConsLen = maxConsLen + 1;
            maxVowelLen = 0;
        }

        if (maxVowelLen >= 5) {
            return i - 5 + 1;
        }
        if (maxConsLen >= 6) {
            return i - 6 + 1;
        }
    }
    return -1;
}

int main() {
    string s;
    cin >> s;
    cout << firstSpecialIndex(s) << "\n";
    return 0;
}


