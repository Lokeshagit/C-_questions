7 4
10 2 6 3 1 8 9


#include <bits/stdc++.h>
using namespace std;

int possible(long long mid, int m, vector<long long>& num){
    int k=0;
    long long sum=0;
    for(int i=0;i<num.size(); i++){
        if(sum+num[i]>mid){
            k++;
            sum = num[i];
        } else {
            sum += num[i];
        }
    }
    if(sum>0) k++;
    return k;
}

int main()
{
    int n, m;
    cin >> n >> m;
    vector<long long> num(n);
    long long total = 0;
    for(int i=0; i<n; i++){
        cin >> num[i];
        total += num[i];
    }
    
    long long low = *min_element(num.begin(), num.end());
    long long high = total;
    long long ans = 0;
    while(low<= high){
        int mid = low+(high-low)/2;
        cout<< mid << " ";
        int k = possible(mid, m, num);
        if(k <= m) {
            ans = mid;
            high = mid-1;
        } else 
            low = mid+1;
    }
    
    cout << ans << endl;
    return 0;
}
