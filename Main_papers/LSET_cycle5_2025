question1: Factorial Sum

#include <bits/stdc++.h>
using namespace std;

int factorSum(int num){
    int sum=num-1;
    for(int i=2; i<=num/2; i++){
        int cnt=0;
        for(int j=i; j<=num; j+=i){
            if(j%i == 0 && j!=i) cnt++;
        }
        cout << i << " " << cnt << endl;
        sum += (cnt * i);
    }
    cout << num << " : " << sum <<  endl;
    return sum;
}

int findSum(int A, int B){
    return factorSum(B)-factorSum(A);
}

int main()
{
    int A, B;
    cin >> A >> B;
    int ans = findSum(A, B);
    cout << ans << endl;

    return 0;
}

Input: A=3, B=10;
Output: 30

2 4
3 2
4 1
5 1
10 : 32
3 : 2
30

---------------------

int factorSum(int num){
    int sum=0;
    for(int i=1; i<=num/2; i++){
        sum += ((num/i) -1) * i;
    }
    cout << num << " : " << sum <<  endl;
    return sum;
}

